{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["projects/**/*"],
    "extends": ["../.eslintrc.json"],
    "rules": {
        "jsdoc/check-indentation": "off",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    },
    "globals": {
        "NodeJS": true,
        "Express": true,
        "Mocha": true
    },
    "overrides": [],
    "env": {
        "node": true,
        "jest": true
    }
}
